NAME				= minitalk
NAME_CLIENT = client

# ============== COLORS ================ #

GREEN		=\033[0;32m
BLUE 		=\033[0;34m
ORANGE	=\033[38;5;214m
RED			=\033[0;31m
YELLOW	=\033[0;33m
WHITE		=\033[0;37m

# === COMPILATE === #

CC			= gcc
CFLAGS	= -Wall -Wextra -Werror -g3
AR 			= ar -rcs
RM			= rm -f
MKDIR		= @-mkdir -p

# === DIRECTORIES === #

LIBFT_DIR = libft/
INCLUDES 	= inc/
SRC_DIR 	= src/
OBJ_DIR 	= obj/
EXE_DIR		= exe/

CLIENT_DIR = client/
UTILS_DIR = utils/
SERVER_DIR = server/

# === SOURCES === #

LIBSFT = $(LIBFT_DIR)libft.a

CLIENT_FILES = client
SERVER_FILES = server
UTILS_FILES = utils

SRC_FILES+=$(addprefix $(UTILS_DIR),$(UTILS_FILES))
SRC_FILES+=$(addprefix $(CLIENT_DIR),$(CLIENT_FILES))
SRC_FILES+=$(addprefix $(SERVER_DIR),$(SERVER_FILES))

SRCS = $(addprefix $(SRC_DIR), $(addsuffix .c, $(SRC_FILES)))
OBJS = $(addprefix $(OBJ_DIR), $(addsuffix .o, $(SRC_FILES)))
EXECS = $(addprefix $(EXE_DIR), $(addsuffix .out, $(SRC_FILES)))

# === RULES === #

all: DIR LIBFS $(NAME)

LIBFS:
			@make -C $(LIBFT_DIR)

$(NAME) : $(OBJS) $(EXECS)
			@$(AR) $(NAME) $(OBJS)
			@echo "$(GREEN)\n âœ“ Creado $(NAME)\n$(WHITE)"

$(OBJ_DIR)%.o : $(SRC_DIR)%.c $(INCLUDES)*.h
			@echo "$(ORANGE) Compilando objetos  âžŸ  $(BLUE)$< $(WHITE)"
			@$(CC) -MT $@ -MMD -MP $(CFLAGS) -I$(INCLUDES) -c $< -o $@

# $(EXE_DIR)%.out : $(OBJ_DIR)%.o $(INCLUDES)*.h
# 			@$(CC) $(CFLAGS) $(LIBSFT) $< -o $@
# 			@echo "$(ORANGE) Compilando Ejecutables  âžŸ  $(BLUE)$< $(WHITE)"

DIR:
			$(MKDIR) $(OBJ_DIR)
			$(MKDIR) $(OBJ_DIR)$(CLIENT_DIR)
			$(MKDIR) $(OBJ_DIR)$(SERVER_DIR)
			$(MKDIR) $(OBJ_DIR)$(UTILS_DIR)
			$(MKDIR) $(EXE_DIR)
			$(MKDIR) $(EXE_DIR)$(CLIENT_DIR)
			$(MKDIR) $(EXE_DIR)$(SERVER_DIR)

clean : 
			@$(RM) -rf $(OBJ_DIR)
			@$(RM) -rf $(EXE_DIR)
			@echo "$(RED)\n âœ— Archivos objetos Minitalk borrados.â€¼ï¸\n$(WHITE)";

fclean : clean
			@$(RM) -f $(NAME)
			@echo "$(BLUE) Todo Super limpito...âœŒðŸ¼$(WHITE)"

re: fclean all
			@echo "$(YELLOW) Borrado todo y recompilado...âœŒðŸ¼$(WHITE)"

norm:
			@norminette $(SRCS) $(INCLUDES) | grep -v Norme -B1 || true

# Non-file targets
.PHONY: all clean fclean re norm LIBFS
